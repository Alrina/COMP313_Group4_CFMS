<% include partials/header.ejs %>

<section class="section"></section>
<main class="container mar-top60 mar-bot50">
    <div class="col-lg-12 mar-bot30">
        <h1 class="text-center text-uppercase">Feedback</h1>
        <hr>
    </div>

    <form method="post" action="#">
        <!--Row-->
        <div class="col-lg-2"></div>
        <div class="form-group col-lg-4">
            <label class="cols-sm-2 control-label">First Name</label>
            <div class="input-group ">
                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                <input type="text" class="form-control formInput" name="firstname"  value=""/>
            </div>
        </div>
        <div class="form-group col-lg-4">
            <label class="cols-sm-2 control-label">Last Name</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                <input type="text" class="form-control formInput" name="lastname"  value=""/>
            </div>
        </div>
        <div class="col-lg-2"></div>

        <!--Row-->
        <div class="col-lg-2 clear"></div>
        <div class="form-group col-lg-4">
            <label class="cols-sm-2 control-label">Email</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                <input type="email" class="form-control formInput" name="email" value=""/>
            </div>
        </div>
        <div class="form-group col-lg-4">
            <label class="cols-sm-2 control-label">Date</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                    <input type="datetime-local" class="form-control formInput" name="date"  value=""/>
                </div>
        </div>
        <div class="col-lg-2"></div>

        <!--Row-->
        <div class="col-lg-2 clear"></div>
        <div class="form-group col-lg-4">
            <label class="cols-sm-2 control-label">Company</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                <select class="form-control formInput" name="role">
                    <option>Company A</option>
                    <option>Company B</option>
                    <option>Company C</option>

                </select>
            </div>
        </div>

        <div class="col-lg-2"></div>

        <!--Row-->
        <div class="col-lg-2 clear"></div>
        <div class="form-group col-lg-8">
            <label class="cols-sm-2 control-label">Message</label>
            <textarea class="formTextArea form-control formInput " name="feedback" style="height: 150px" placeholder="Enter your message..." required></textarea>
        </div>

        <div class="col-lg-2"></div>

        <div class="col-lg-2 clear"></div>

        <div class="col-lg-8">
            <button type="button" class="btn btn-primary btn-lg btn-block mar-top30 text-uppercase">Submit</button>
        </div>
        <div class="col-lg-2"></div>
    </form>
</main>

<section class="section"></section>
<% include partials/footer.ejs %>